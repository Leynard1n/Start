            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="DodgerBlue"/>
                <Setter Property="Foreground" Value="SteelBlue"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>